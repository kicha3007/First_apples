doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width", initial-scale=1)
        title Hello World
        link(rel="stylesheet" type="text/css" href="static/css/main.css" )
    body
        section.it-price
            .it-all-title Расчет стоимости ремонта вашего устройства
            .it-container
                ul.it-price__wrap
                    li.it-price__item
                            ul.it-price__inner-wrap
                                - var deviceImg = ["1", "2", "3", "4"];
                                - var deviceMainTitle = ["iPhone", "iPad", "MacBook", "Другие устройства"];
                                - for(i=0; i<deviceMainTitle.length; i++) {
                                li.it-price__inner-item
                                    .it-price__img-box
                                        img.it-price__img( src="static/img/price/" + deviceImg[i] + ".png")
                                    .it-price__title #{deviceMainTitle[i]}
                                - }
                    li.it-price__item
                        ul.it-price__inner-wrap
                            - var deviceTitle = ["iPhone X", "iPhone 7", "iPhone 6S", "iPhone 5S", "iPhone 8", "iPhone SE", "iPhone 6 Plus", "iPhone 5 / 5C", "iPhone 7 Plus", "iPhone 6S Plus", "iPhone 6", "iPhone 4 / 4S"];
                            - for(i=0; i<deviceTitle.length; i++) {
                            li.it-price__inner-item.it-price__inner-item--size
                                .it-price__title #{deviceTitle[i]}
                            - }


